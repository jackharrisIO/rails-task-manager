<h1>Edit a task</h1>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
<div class="form-group">
    <p><%= f.check_box :completed, {:class => "checkbox", :style => "mystyle"}, "checked-value", "unchecked-value" %> Mark as completed</p>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<br>
<%= link_to "Back to list", tasks_path  %>
